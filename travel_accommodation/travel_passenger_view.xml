<?xml version = "1.0" encoding="utf-8"?>
<openerp>
  <data>
    <!-- Views -->
    <record model="ir.ui.view" id="travel_passenger_journey_form_view">
      <field name="name">Travel Passenger Form View</field>
      <field name="model">travel.passenger</field>
      <field name="inherit_id" ref="travel_journey.travel_passenger_journey_form_view"/>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <notebook name="Info" position="inside">
          <page string="Accommodation">
            <field name="accommodation_ids">
              <tree name="PassengerAccommodationTree" version="7.0">
                <field name="location"/>
                <field name="arrival"/>
                <field name="nights"/>
              </tree>
            </field>
          </page>
        </notebook>
      </field>
    </record>
  </data>
</openerp>
