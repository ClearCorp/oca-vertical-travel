<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <record id="hr_division_view_tree" model="ir.ui.view">
      <field name="name">hr.division.tree</field>
      <field name="model">hr.division</field>
      <field name="arch" type="xml">
        <tree string="divisions">
          <field name="name"/>
          <field name="code"/>
        </tree>
      </field>
    </record>

    <record id="hr_division_view_form" model="ir.ui.view">
      <field name="name">hr.division.form</field>
      <field name="model">hr.division</field>
      <field name="arch" type="xml">
        <form string="division" version="7.0">
          <group col="4">
            <field name="name"/>
            <field name="code"/>
            <field name="parent_id"/>
          </group>
        </form>
      </field>
    </record>

    <record id="open_division" model="ir.actions.act_window">
      <field name="name">Division</field>
      <field name="res_model">hr.division</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
    </record>
    <menuitem action="open_division"
        id="menu_hr_division"
        parent="hr.menu_hr_configuration"
        sequence="45"/>
    </data>
</openerp>
